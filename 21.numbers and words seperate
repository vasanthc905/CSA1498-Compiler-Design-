%{
	#include <string.h>
	char word[20][20],num[20][20];
	int w=0,n=0;
%}
%%
[a-zA-Z]+ {strcpy(word[w++],yytext);}
[0-9]+ {strcpy(num[n++],yytext);}
[^0-9A-Za-z]+ {}
%%
int yywrap(void) {}
int main()
{
	printf("Enter the Input:");
	yylex();
	printf("Words=");
	for(int i=0;i<w;i++) printf("%s ",word[i]);
	printf("\nNumbers=");
	for(int i=0;i<n;i++) printf("%s ",num[i]);
}
